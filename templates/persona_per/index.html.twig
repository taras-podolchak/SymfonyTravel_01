{% block title %}PersonaPer index{% endblock %}

{% block body %}
    <h1>PersonaPer index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>IdPer</th>
                <th>UsuariotipoPer</th>
                <th>FotopropiaPer</th>
                <th>NombrePer</th>
                <th>Apellido1Per</th>
                <th>Apellido2Per</th>
                <th>MovilPer</th>
                <th>DniPer</th>
                <th>EmailPer</th>
                <th>ContrasennaPer</th>
                <th>CochePer</th>
                <th>FechaaltaPer</th>
                <th>FechabajaPer</th>
                <th>actions</th>
            </tr>
